@model easysched.Models.Timeoffrequest

@{
    ViewData["Title"] = "Approve or Deny Time Off Request";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Timeoffrequest</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Employee)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
    </dl>
</div>

<form asp-action="ChangeStatus" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input id="Id" name="Id"  asp-for="Id" value="@(ViewData["id"])" hidden/>
        <input type="datetime" id="Created" name="Created"  asp-for="Created" value="@(ViewData["created"])" hidden/>
        <input id="EmployeeId" name="EmployeeId"  asp-for="EmployeeId" value="@(ViewData["employeeid"])" hidden />
        <input type="datetime" id="Day" name="Day"  asp-for="Day" value="@(ViewData["day"])" hidden/>
        <input id="Message" name="Message"  asp-for="Message" value="@(ViewData["message"])" hidden />
        <input id="Approved" name="Approved" asp-for="Approved" value="@null" hidden />
        <input type="submit" name="submit" value="Approve" class="btn btn-primary" />
        <input type="submit" name="submit" value="Deny" class="btn btn-danger" />
    </div>
</form>
